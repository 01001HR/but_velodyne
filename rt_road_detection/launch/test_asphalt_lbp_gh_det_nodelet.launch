<?xml version="1.0"?>
<launch>

  <arg name="manager_name" default="cam3d_nodelet_manager"/>

  <group ns="detectors">

    <node pkg="nodelet" type="nodelet" name="LBPDetectorNodelet" args="load rt_road_detection/LBPDetectorNodelet /$(arg manager_name)" output="screen">
       
       <remap from="rgb_in" to="/cam3d/rgb/image_rect_color"/>
       <remap from="det_out" to="/detectors/lbp"/>
       
       <param name="width_block" value="64"/> 
       <param name="height_block" value="64"/>
       <param name="width_cell" value="16"/>
       <param name="height_cell" value="16"/>
       
       <param name="prob_min" value="0.3"/>
       <param name="prob_max" value="0.7"/>
       <param name="prob_overexposure" value="0.5"/>
       <param name="flat_surface_in_block" value="0.25"/>
       
       <param name="hue_channel" value="true" />
       
       <param name="svm_threshold" value="0"/>
       <param name="frame_skip" value="2"/>
       
    </node>   
  
  </group>

</launch>

