<?xml version="1.0"?>
<launch>

  <!-- this node detects office floor -->
  <node pkg="rt_road_detection" name="floor_detector_node" type="sample_hue_detector_node" output="screen" ns="detectors">
   <remap from="rgb_in" to="/stereo/left/image_rect_color"/>
   <remap from="det_out" to="/detectors/sample_asphalt"/>
   <param name="hue_min" value="88"/> <!-- hue values for pvc floor (94) -->
   <param name="hue_max" value="106"/>
   <param name="median_ks" value="5"/>
   <param name="prob_hit" value="0.55"/>
   <param name="prob_miss" value="0.45"/>
  </node>

</launch>
