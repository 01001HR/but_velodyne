<?xml version="1.0"?>
<launch>

  <!-- this node detects road/asphalt -->
  <node pkg="rt_road_detection" name="asphalt_detector_node" type="sample_hue_detector_node" output="screen" ns="detectors">
   <remap from="rgb_in" to="/stereo/left/image_color"/>
   <remap from="det_out" to="/detectors/road/sample_asphalt"/>
   <param name="hue_min" value="52"/> <!-- hue values for asphalt (104) -->
   <param name="hue_max" value="100"/>
   <param name="median_ks" value="5"/>
  </node>

</launch>
